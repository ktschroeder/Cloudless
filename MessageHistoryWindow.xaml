<Window x:Class="Cloudless.MessageHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message History"
        Height="400"
        Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown">

    <Border Background="#FAFAFA"
            CornerRadius="6"
            Padding="0">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.15"/>
        </Border.Effect>

        <DockPanel>

            <!-- Header -->
            <Border Background="#F0F0F0"
                    Padding="8"
                    DockPanel.Dock="Top"
                    CornerRadius="6,6,0,0">
                <TextBlock Text="System Messages"
                           FontWeight="SemiBold"
                           Foreground="#333"/>
            </Border>

            <!-- Content -->
            <StackPanel Margin="12">

                <TextBlock Text="Messages:"
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,0,0,8"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                    <ListBox x:Name="MessageListBox" KeyDown="MessageListBox_KeyDown"
                             Background="White" BorderBrush="#DDD" BorderThickness="1"
                             Padding="4" />
                </ScrollViewer>

                <!-- Close Button -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="Close"
                            Style="{StaticResource CloudlessPrimaryButton}"
                            Click="Close_Click"
                            FontWeight="SemiBold"
                            Width="60"/>
                </StackPanel>

            </StackPanel>

        </DockPanel>
    </Border>
</Window>
