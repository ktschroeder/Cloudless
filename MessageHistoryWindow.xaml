<Window x:Class="Cloudless.MessageHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message History" Height="400" Width="600"
        WindowStyle="None" ResizeMode="NoResize" MouseDown="Window_MouseDown" KeyDown="Window_KeyDown">
    <Grid>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center">
            <Run Text="System Messages" FontWeight="Bold" /> 
        </TextBlock>
        <Grid Margin="10,20,10,35">
            <ListBox x:Name="MessageListBox" KeyDown="MessageListBox_KeyDown"/>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,365,0,0">
            <Button Content="Close" Click="Close_Click" Height="22"/>
        </StackPanel>
    </Grid>

</Window>
