<Window x:Class="SimpleImageViewer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Just View" Height="400" Width="300"
        WindowStyle="None" ResizeMode="NoResize" MouseDown="Window_MouseDown" KeyDown="Window_KeyDown">
    <Border BorderBrush="Black" BorderThickness="2" Background="White">
        <StackPanel Margin="10">
            <TextBlock Text="You are using Just View, a lightweight, minimal-UI image viewing app. It was created by ktschroeder." 
                   TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Version 0.0.0" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="This app was designed to provide a visually simple, efficient image viewing experience, along with quiet but plentiful features. Some configurations are available in the preferences window." 
                   TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="License: Placeholder License" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="You are loved." TextWrapping="Wrap" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Close" Click="Close_Click" Margin="0,5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
