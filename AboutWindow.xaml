<Window x:Class="Cloudless.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Cloudless"
        Height="285"
        Width="340"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown">

    <Border Background="#FAFAFA"
            CornerRadius="6"
            Padding="0">

        <DockPanel>

            <!-- Header -->
            <Border Background="#F0F0F0"
                    Padding="8"
                    DockPanel.Dock="Top"
                    CornerRadius="6,6,0,0">
                <TextBlock Text="About Cloudless"
                           FontWeight="SemiBold"
                           Foreground="#333"/>
            </Border>

            <!-- Content -->
            <StackPanel Margin="12">

                <TextBlock Text="You are using Cloudless, a lightweight, minimal-UI image viewing and arranging app. It was created by ktschroeder."
                           TextWrapping="Wrap"
                           Foreground="#666"
                           Margin="0,0,0,10"/>

                <TextBlock Name="VersionText"
                           Text="Version ___"
                           TextWrapping="Wrap"
                           Foreground="#666"
                           Margin="0,0,0,10"/>

                <TextBlock Text="This app was designed to provide a visually simple, efficient image viewing experience, along with quiet but plentiful features. Some configurations are available in the preferences window."
                           TextWrapping="Wrap"
                           Foreground="#666"
                           Margin="0,0,0,10"/>

                <TextBlock Name="MomentOfZen"
                           Text="You are loved."
                           TextWrapping="Wrap"
                           Foreground="#666"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="View on GitHub"
                            Style="{StaticResource CloudlessButton}"
                            Click="GitHub_Click"
                            Margin="0,0,8,0"
                            Width="110"/>

                    <Button Content="Close"
                            Style="{StaticResource CloudlessPrimaryButton}"
                            Click="Close_Click"
                            FontWeight="SemiBold"
                            Width="50"/>
                </StackPanel>

            </StackPanel>

        </DockPanel>
    </Border>
</Window>
