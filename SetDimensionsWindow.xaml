<Window x:Class="Cloudless.SetDimensionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Dimensions"
        Height="175"
        Width="250"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown"
        AllowsTransparency="True">

    <Border Background="#FAFAFA"
            CornerRadius="6"
            Padding="0">

        <!-- Optional subtle shadow -->
        <Border.Effect>
            <DropShadowEffect BlurRadius="12"
                              ShadowDepth="0"
                              Opacity="0.15"/>
        </Border.Effect>

        <DockPanel>

            <!-- Header -->
            <Border Background="#F0F0F0"
                    Padding="8"
                    DockPanel.Dock="Top"
                    CornerRadius="6,6,0,0">
                <TextBlock Text="Set Window Dimensions"
                           FontWeight="SemiBold"
                           Foreground="#333"/>
            </Border>

            <!-- Content -->
            <StackPanel Margin="12">

                <TextBlock Foreground="#666"
                           FontSize="12"
                           Margin="0,0,0,10">
                    Current size:
                    <Run x:Name="CurrentDimensionsText" Text="(undefined)"/>
                </TextBlock>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Width"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="#555"/>

                    <TextBox x:Name="WidthTextBox"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="80"
                             Margin="10,4,0,4"/>

                    <TextBlock Text="Height"
                               Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="#555"/>

                    <TextBox x:Name="HeightTextBox"
                             Grid.Row="1"
                             Grid.Column="1"
                             Width="80"
                             Margin="10,4,0,4"/>
                </Grid>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="Cancel"
                            Style="{StaticResource CloudlessButton}"
                            Click="Cancel_Click"
                            Margin="0,0,8,0"
                            Width="50"/>

                    <Button Content="OK"
                            IsDefault="True"
                            Style="{StaticResource CloudlessPrimaryButton}"
                            Click="Save_Click"
                            FontWeight="SemiBold" Width="50"/>
                </StackPanel>

            </StackPanel>

        </DockPanel>
    </Border>
</Window>
