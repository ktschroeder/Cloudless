<Window x:Class="Cloudless.ImageInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Info"
        SizeToContent="Height"
        MinHeight="220"
        MaxHeight="600"
        Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown"
        AllowsTransparency="True">

    <Border Background="#FAFAFA"
            CornerRadius="6"
            Padding="0">


        <DockPanel>

            <!-- Header -->
            <Border Background="#F0F0F0"
                    Padding="8"
                    DockPanel.Dock="Top"
                    CornerRadius="6,6,0,0">
                <TextBlock Text="Image Info"
                           FontWeight="SemiBold"
                           Foreground="#333"/>
            </Border>

            <!-- Content -->
            <StackPanel Margin="12">

                <!-- Info Grid -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Filename:" Grid.Row="0" Grid.Column="0" Foreground="#555" Margin="0,2"/>
                    <TextBlock x:Name="FilenameText"
                       Grid.Row="0" Grid.Column="1"
                       TextWrapping="Wrap"
                       Foreground="#555"
                       Margin="6,2,0,2"/>

                    <TextBlock Text="Path:" Grid.Row="1" Grid.Column="0" Foreground="#555" Margin="0,2"/>
                    <TextBlock x:Name="PathText"
                       Grid.Row="1" Grid.Column="1"
                       TextWrapping="Wrap"
                       Foreground="#777"
                       Margin="6,2,0,2"/>

                    <TextBlock Text="Dimensions:" Grid.Row="2" Grid.Column="0" Foreground="#555" Margin="0,2"/>
                    <TextBlock x:Name="DimensionsText" Grid.Row="2" Grid.Column="1" Foreground="#666" Margin="6,2,0,2"/>

                    <TextBlock Text="Size:" Grid.Row="3" Grid.Column="0" Foreground="#555" Margin="0,2"/>
                    <TextBlock x:Name="SizeText" Grid.Row="3" Grid.Column="1" Foreground="#666" Margin="6,2,0,2"/>

                    <TextBlock Text="Format:" Grid.Row="4" Grid.Column="0" Foreground="#555" Margin="0,2"/>
                    <TextBlock x:Name="FormatText" Grid.Row="4" Grid.Column="1" Foreground="#666" Margin="6,2,0,2"/>

                    <TextBlock Text="Last Modified:" Grid.Row="5" Grid.Column="0" Foreground="#555" Margin="0,2"/>
                    <TextBlock x:Name="LastModifiedText" Grid.Row="5" Grid.Column="1" Foreground="#666" Margin="6,2,0,2"/>
                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="Copy Path"
                            Name="CopyButton"
                            Style="{StaticResource CloudlessButton}"
                            Click="CopyPath_Click"
                            Margin="0,0,8,0" Width="80"/>
                    <Button Content="Reveal in Explorer"
                            Style="{StaticResource CloudlessButton}"
                            Click="Reveal_Click"
                            Margin="0,0,8,0" Width="120"/>
                    <Button Content="Close"
                            Style="{StaticResource CloudlessPrimaryButton}"
                            Click="Close_Click"
                            FontWeight="SemiBold"
                            Width="60"/>
                </StackPanel>

            </StackPanel>

        </DockPanel>
    </Border>
</Window>
