<Window x:Class="Cloudless.RecentImagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recent Images Gallery"
        Width="535"
        SizeToContent="Height"
        MaxHeight="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown">

    <Border Background="#FAFAFA"
            CornerRadius="6">

        <DockPanel>

            <!-- Header -->
            <Border Background="#F0F0F0"
                    Padding="8"
                    DockPanel.Dock="Top"
                    CornerRadius="6,6,0,0">
                <TextBlock Text="Recent Images Gallery"
                           FontWeight="SemiBold"
                           Foreground="#333"/>
            </Border>

            <!-- Content -->
            <DockPanel Margin="12">

                <!-- Bottom Close Button -->
                <StackPanel DockPanel.Dock="Bottom"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="Close"
                            Style="{StaticResource CloudlessPrimaryButton}"
                            Click="Close_Click"
                            Width="60"
                            FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Scrollable Thumbnail Grid -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding RecentImages}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True"
                                           ItemWidth="160"
                                           ItemHeight="178"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4"
                                        Margin="6"
                                        Background="White"
                                        BorderBrush="#DDD"
                                        BorderThickness="1"
                                        Cursor="Hand">

                                    <StackPanel MouseLeftButtonUp="Thumbnail_Click">

                                        <Image Source="{Binding Thumbnail}"
                                               Width="128"
                                               Height="128"
                                               Stretch="UniformToFill"
                                               Margin="4"/>

                                        <TextBlock Text="{Binding FileName}"
                                                   FontSize="11"
                                                   Foreground="#555"
                                                   TextTrimming="CharacterEllipsis"
                                                   HorizontalAlignment="Center"
                                                   Margin="4,4,4,6"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>

            </DockPanel>

        </DockPanel>
    </Border>
</Window>
